{
	"name": "obsidian-task-planner",
	"version": "1.0.0",
	"description": "I came to this: Obsidian task management and planner with drag-and-drop task planning, Today focus, backlog, overdue, and weekly time buckets.",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -p tsconfig.json --noEmit && node esbuild.config.mjs production",
		"deploy": "cp manifest.json main.js styles.css \"$OBSIDIAN_PATH/.obsidian/plugins/task-planner\" && echo 'Deployed to $OBSIDIAN_PATH/.obsidian/plugins/task-planner'",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage"
	},
	"keywords": ["obsidian", "task-management", "planning", "productivity", "todo"],
	"author": "selfish",
	"license": "GPL-2.0",
	"devDependencies": {
		"@types/luxon": "^3.4.0",
		"@types/node": "^20.10.0",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"builtin-modules": "^3.3.0",
		"esbuild": "0.25.0",
		"tslib": "^2.6.0",
		"typescript": "^5.3.0"
	},
	"dependencies": {
		"@popperjs/core": "^2.11.6",
		"@types/react": "^18.2.0",
		"@types/react-dom": "^18.2.1",
		"chrono-node": "^2.3.8",
		"luxon": "^2.3.1",
		"obsidian": "^1.0.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/selfish/obsidian-task-planner.git"
	},
	"bugs": {
		"url": "https://github.com/selfish/obsidian-task-planner/issues"
	},
	"homepage": "https://github.com/selfish/obsidian-task-planner#readme"
}
